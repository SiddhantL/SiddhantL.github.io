---
interface Skill {
  name: string;
  icon: string;
  color: string;
  level: number;
}

const frontendSkills: Skill[] = [
  { name: 'Android (Java)', icon: 'logos:android-icon', color: '#3DDC84', level: 95 },
  { name: 'React Native', icon: 'logos:react', color: '#61DAFB', level: 90 },
  { name: 'Kotlin', icon: 'logos:kotlin-icon', color: '#7F52FF', level: 85 },
  { name: 'Jetpack Compose', icon: 'logos:android-icon', color: '#3DDC84', level: 75 },
  { name: 'TypeScript', icon: 'logos:typescript-icon', color: '#3178C6', level: 80 },
  { name: 'HTML/CSS', icon: 'logos:html-5', color: '#E34F26', level: 85 },
];

const frameworkSkills: Skill[] = [
  { name: 'TensorFlow Lite', icon: 'logos:tensorflow', color: '#FF6F00', level: 85 },
  { name: 'PyTorch', icon: 'simple-icons:pytorch', color: '#EE4C2C', level: 80 }, // fixed icon
  { name: 'Scikit-learn', icon: 'simple-icons:scikitlearn', color: '#F7931E', level: 75 },
  { name: 'Arduino', icon: 'logos:arduino', color: '#00979D', level: 80 },
  { name: 'Raspberry Pi', icon: 'logos:raspberry-pi', color: '#C51A4A', level: 80 },
  { name: '3D Printing (Ender3)', icon: 'tabler:3d-cube-sphere', color: '#00BFFF', level: 70 },
];

const devToolsSkills: Skill[] = [
  { name: 'Git', icon: 'logos:git-icon', color: '#F05032', level: 100 },
  { name: 'VS Code', icon: 'logos:visual-studio-code', color: '#007ACC', level: 95 },
  { name: 'AWS EC2', icon: 'logos:aws', color: '#FF9900', level: 85 },
  { name: 'Firebase', icon: 'logos:firebase', color: '#FFCA28', level: 80 },
  { name: 'Weights & Biases', icon: 'ph:dot-outline-fill', color: '#FFBE00', level: 70 },
  { name: 'GSM Modules', icon: 'material-symbols:router-rounded', color: '#808080', level: 75 }, // substituted with generic embedded icon
];

---

<section class="skills-section">
  <div class="section-header">
    <h3>Technical Skills</h3>
    <p>Technologies and tools I use in my projects</p>
  </div>

  <div class="skills-grid">
    {[{ name: 'Frontend', data: frontendSkills },
      { name: 'Frameworks', data: frameworkSkills },
      { name: 'Dev Tools', data: devToolsSkills }].map((group) => (
      <div class="skill-card">
        <h4 class="card-title">
          <iconify-icon icon="mdi:tools" class="card-icon" />
          {group.name}
        </h4>
        <div class="skill-list">
          {group.data.map(skill => (
            <div class="skill-row">
              <div class="skill-icon" style={`background-color: ${skill.color}20`}>
                <iconify-icon icon={skill.icon} style={`color: ${skill.color}; font-size: 1.3rem`} />
              </div>
              <div class="skill-info">
                <div class="skill-header">
                  <span>{skill.name}</span>
                  <span class="skill-percent">{skill.level}%</span>
                </div>
                <div class="skill-bar">
                  <div class="skill-fill" style={`width: ${skill.level}%; background-color: ${skill.color}`}></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>

<style>
.skills-section {
  padding: 3rem 1rem;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
.section-header {
  text-align: center;
}
.section-header h3 {
  font-size: 2rem;
  color: var(--gray-0);
  margin-bottom: 0.5rem;
}
.section-header p {
  color: var(--section-header);
  font-size: 1rem;
}
.skills-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}
@media (min-width: 768px) {
  .skills-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
.skill-card {
  background-color: #1e1e2f;
  padding: 1.5rem;
  border-radius: 1rem;
  box-shadow: 0 0 0 1px #333;
}
.card-title {
  font-size: 1.2rem;
  font-weight: bold;
  color: white;
  display: flex;
  align-items: center;
  margin-bottom: 1.5rem;
  gap: 0.5rem;
}
.card-icon {
  font-size: 1.3rem;
  color: #999;
}
.skill-row {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}
.skill-icon {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
.skill-info {
  flex: 1;
}
.skill-header {
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  color: white;
}
.skill-percent {
  color: #aaa;
}
.skill-bar {
  height: 0.5rem;
  background-color: #444;
  border-radius: 999px;
  margin-top: 0.25rem;
}
.skill-fill {
  height: 100%;
  border-radius: 999px;
}
</style>
